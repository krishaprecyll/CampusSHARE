import { Star, MapPin, Clock, DollarSign } from 'lucide-react';
import { useState } from 'react';

interface SafeZoneTransactionProps {
  safeZone: {
    id: string;
    name: string;
    location: string;
    status: string;
  };
  transaction: {
    id: string;
    itemName: string;
    itemCategory: string;
    rentalFee: number;
    rentalDate: string;
    renter: {
      id: string;
      name: string;
      rating: number;
      reviews: number;
      initials: string;
    };
    owner: {
      id: string;
      name: string;
      rating: number;
      reviews: number;
      initials: string;
    };
  };
  onConfirm?: (transactionId: string) => void;
  onMessage?: (transactionId: string) => void;
}

/* Reusable Rating Component */
function Rating({ rating, reviews }: { rating: number; reviews: number }) {
  return (
    <div className="flex items-center gap-1 mt-1">
      <Star className="h-3 w-3 text-yellow-400 fill-yellow-400" />
      <span className="text-xs text-slate-600">
        {rating?.toFixed(1) ?? '0.0'} ({reviews ?? 0})
      </span>
    </div>
  );
}

export default function SafeZoneTransaction({
  safeZone,
  transaction,
  onConfirm,
  onMessage,
}: SafeZoneTransactionProps) {
  const [confirmed, setConfirmed] = useState(false);

  const formattedPrice = new Intl.NumberFormat('en-US', {
    style: 'currency',
    currency: 'USD',
  }).format(transaction.rentalFee);

  const handleConfirm = () => {
    setConfirmed(true);
    onConfirm?.(transaction.id);
  };

  return (
    <div className="bg-white rounded-xl shadow-sm hover:shadow-lg hover:-translate-y-1 transition-all duration-300 overflow-hidden">
      <div className="p-6">

        {/* Header */}
        <div className="flex items-start justify-between mb-5">
          <div>
            <h3 className="font-semibold text-lg text-slate-900">
              {transaction.itemName}
            </h3>
            <p className="text-xs text-blue-600 font-medium mt-1">
              {transaction.itemCategory}
            </p>
          </div>

          <div className="text-right">
            <div className="flex items-center justify-end text-blue-600 font-bold text-lg">
              <DollarSign className="h-4 w-4" />
              <span>{formattedPrice}</span>
            </div>
            <div className="flex items-center justify-end gap-1 text-xs text-slate-500 mt-1">
              <Clock className="h-3 w-3" />
              <span>{transaction.rentalDate}</span>
            </div>
          </div>
        </div>

        {/* Safe Zone Info */}
        <div className="flex items-center justify-between mb-5 p-3 bg-slate-50 rounded-lg">
          <div className="flex items-center gap-2">
            <MapPin className="h-4 w-4 text-orange-600" />
            <div>
              <p className="text-sm font-medium text-slate-900">
                {safeZone.name}
              </p>
              <p className="text-xs text-slate-600">
                {safeZone.location}
              </p>
            </div>
          </div>

          {/* Status Badge */}
          <span
            className={`text-xs px-2 py-1 rounded-full font-medium ${
              safeZone.status === 'Active'
                ? 'bg-green-100 text-green-700'
                : 'bg-red-100 text-red-700'
            }`}
          >
            {safeZone.status}
          </span>
        </div>

        {/* Users */}
        <div className="grid grid-cols-2 gap-4 border-t pt-5">
          {/* Renter */}
          <div>
            <p className="text-xs text-slate-500 font-semibold uppercase mb-3">
              Renter
            </p>
            <div className="flex items-center gap-3">
              <div className="w-10 h-10 rounded-full bg-gradient-to-br from-blue-400 to-blue-600 flex items-center justify-center">
                <span className="text-white font-bold text-sm">
                  {transaction.renter.initials}
                </span>
              </div>
              <div>
                <p className="text-sm font-medium text-slate-900">
                  {transaction.renter.name}
                </p>
                <Rating
                  rating={transaction.renter.rating}
                  reviews={transaction.renter.reviews}
                />
              </div>
            </div>
          </div>

          {/* Owner */}
          <div>
            <p className="text-xs text-slate-500 font-semibold uppercase mb-3">
              Owner / Lender
            </p>
            <div className="flex items-center gap-3">
              <div className="w-10 h-10 rounded-full bg-gradient-to-br from-green-400 to-green-600 flex items-center justify-center">
                <span className="text-white font-bold text-sm">
                  {transaction.owner.initials}
                </span>
              </div>
              <div>
                <p className="text-sm font-medium text-slate-900">
                  {transaction.owner.name}
                </p>
                <Rating
                  rating={transaction.owner.rating}
                  reviews={transaction.owner.reviews}
                />
              </div>
            </div>
          </div>
        </div>

        {/* Buttons */}
        <div className="flex gap-2 mt-6">
          <button
            type="button"
            disabled={confirmed}
            onClick={handleConfirm}
            aria-label={`Confirm arrival for ${transaction.itemName}`}
            className={`flex-1 py-2 rounded-lg font-medium text-sm transition-colors ${
              confirmed
                ? 'bg-green-600 text-white cursor-not-allowed'
                : 'bg-green-100 text-green-700 hover:bg-green-200'
            }`}
          >
            {confirmed ? 'Confirmed' : 'Confirm Arrival'}
          </button>

          <button
            type="button"
            onClick={() => onMessage?.(transaction.id)}
            aria-label={`Message about ${transaction.itemName}`}
            className="flex-1 bg-slate-100 text-slate-700 py-2 rounded-lg font-medium text-sm hover:bg-slate-200 transition-colors"
          >
            Message
          </button>
        </div>

        {/* Small Transaction ID (Optional Debug Info) */}
        <p className="text-[10px] text-slate-400 mt-4">
          Transaction ID: {transaction.id}
        </p>
      </div>
    </div>
  );
}
